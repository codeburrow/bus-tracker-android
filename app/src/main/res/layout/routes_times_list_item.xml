<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/list_item_small_text_size"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="@dimen/list_item_small_margin"
        android:layout_marginRight="@dimen/list_item_small_margin"
        android:layout_marginBottom="@dimen/list_item_divider"
        android:paddingTop="@dimen/list_item_small_margin"
        android:paddingBottom="@dimen/list_item_small_margin"
        android:paddingLeft="@dimen/list_item_large_margin"
        android:paddingRight="@dimen/list_item_large_margin"
        android:background="@drawable/rounded_view_faq_list_item"
        android:text=" 8:05" />

    <TextView
        android:id="@+id/list_item_station"
        android:minHeight="@dimen/minimum_clickable_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_item_small_text_size"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="@dimen/list_item_small_margin"
        android:layout_marginBottom="@dimen/list_item_divider"
        android:paddingTop="@dimen/list_item_small_margin"
        android:paddingBottom="@dimen/list_item_small_margin"
        android:paddingLeft="@dimen/list_item_large_margin"
        android:paddingRight="@dimen/list_item_large_margin"
        android:background="@drawable/rounded_view_faq_list_item"
        android:text="Κεντρική Πλατεία Αγίου Κωνσταντίνου Γλυφάδας (τέρμα λεωφορείων)" />

</LinearLayout>